<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="@android:color/transparent"/>
    <stroke
        android:width="1dp"
        android:color="@android:color/black" />

    <!-- Viền phía trên -->
    <padding
        android:top="2dp"
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp" />
    <corners
        android:topLeftRadius="0dp"
        android:topRightRadius="0dp"
        android:bottomLeftRadius="20dp"
        android:bottomRightRadius="20dp" />

    <!-- Viền phía dưới -->
    <padding
        android:top="0dp"
        android:bottom="2dp"
        android:left="0dp"
        android:right="0dp" />
    <corners
        android:topLeftRadius="20dp"
        android:topRightRadius="20dp"
        android:bottomLeftRadius="0dp"
        android:bottomRightRadius="0dp" />

    <!-- Viền bên trái -->
    <padding
        android:top="0dp"
        android:bottom="0dp"
        android:left="2dp"
        android:right="0dp" />
    <corners
        android:topLeftRadius="0dp"
        android:topRightRadius="20dp"
        android:bottomLeftRadius="20dp"
        android:bottomRightRadius="0dp" />

    <!-- Viền bên phải -->
    <padding
        android:top="0dp"
        android:bottom="0dp"
        android:left="0dp"
        android:right="2dp" />
    <corners
        android:topLeftRadius="20dp"
        android:topRightRadius="0dp"
        android:bottomLeftRadius="0dp"
        android:bottomRightRadius="20dp" />
</shape>